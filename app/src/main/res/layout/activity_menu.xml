<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPaint"
    tools:context=".MenuActivity">

    <Button
        android:id="@+id/button_start_drawing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/drawing_button"
        android:textColor="@color/colorPaint"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/MainMenuText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/MainMenuText"
        android:textColor="@color/colorBackground"
        android:textSize="36sp"
        app:layout_constraintBottom_toTopOf="@+id/button_start_drawing"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/MainMenuIPAdress"
        android:layout_width="240dp"
        android:layout_height="28dp"
        android:background="@color/colorBackground"
        android:digits="0123456789."
        android:ems="10"
        android:hint="@string/IPAdressHint"
        android:importantForAutofill="no"
        android:inputType="number|numberDecimal"
        android:maxLength="15"
        android:singleLine="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_start_drawing"
        app:layout_constraintVertical_bias="0.5" />

</androidx.constraintlayout.widget.ConstraintLayout>